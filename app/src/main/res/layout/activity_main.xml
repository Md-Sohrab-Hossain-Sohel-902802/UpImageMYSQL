<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

<ImageView
    android:id="@+id/imageUpload"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:scaleType="fitXY"
    android:layout_gravity="center_horizontal"
    android:src="@mipmap/ic_launcher"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter The Product Name"
        android:textSize="20sp"
        android:textColor="#000"
        android:id="@+id/productNameEdittextid"
        />    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Enter The Product Discription"
        android:textSize="20sp"
        android:textColor="#000"
        android:id="@+id/productDiscriptionEdiittextid"
        />

    <Button
        android:id="@+id/buttonChose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Choose Image"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="20dp"
        />


    <Button
    android:text="Upload"
        android:id="@+id/bthUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        />   <Button
    android:text="Show"
        android:id="@+id/showButtonid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        />
    </LinearLayout>
</ScrollView>